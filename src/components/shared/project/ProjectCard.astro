---
import type { Project } from "@/interfaces/Project.interface";
import TechnologyBadge from "./TechnologyBadge.astro";
import { Image } from "astro:assets";

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { title, description, image, url, technologies } = project;
---

<a class="card" href={url} target="_blank" rel="noopener noreferrer">
  <!-- IMAGEN -->
  {
    image && (
      <div class="overflow-hidden">
        <Image
          src={image}
          alt={`${title}`}
          width={560}
          height={315}
          quality="high"
          loading={"lazy"}
          class="card-image"
        />
      </div>
    )
  }

  <!-- INFORMACIÓN -->
  <div class="p-6 flex flex-col gap-3">
    <h4 class="text-2xl text-[var(--white)] font-semibold leading-snug">
      {title}
    </h4>
    <p class="text-base text-[var(--white-icon)] leading-relaxed">
      {description}
    </p>
  </div>

  <!-- TECNOLOGÍAS -->
  <div class="w-full flex flex-wrap gap-2 px-6 pb-6 pt-0">
    {technologies.map((tech) => <TechnologyBadge tech={tech} />)}
  </div>
</a>
