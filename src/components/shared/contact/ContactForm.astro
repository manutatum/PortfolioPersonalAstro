<div class="flex flex-col gap-1 text-left">
  <!-- TITULO -->
  <h3 class="text-lg font-normal text-blue-300">Hablemos</h3>
  <h2
    class="text-3xl md:text-4xl font-medium text-[var(--white)] text-pretty leading-none"
  >
    Contactame
  </h2>

  <div class="w-full flex gap-4 mt-4">
    <!-- INFORMACIÓN -->
    <p class="text-[var(--white-icon)] text-lg font-normal">
      Si quieres ponerte en contacto conmigo, puedes usar el formulario de
      abajo.
    </p>

    <!-- Formulario -->
    <form method="post" class="w-full flex flex-col gap-3">
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Nombre"
        class="w-full rounded-lg border border-[var(--white-icon-tr)] p-2 text-[var(--white-icon)] bg-transparent focus:outline-none focus:ring-2 focus:ring-blue-300"
        required
        minlength="6"
        maxlength="30"
        pattern="^[a-zA-Z ]+$"
      />

      <input
        type="email"
        name="email"
        id="email"
        placeholder="Correo electrónico"
        class="w-full rounded-lg border border-[var(--white-icon-tr)] p-2 text-[var(--white-icon)] bg-transparent focus:outline-none focus:ring-2 focus:ring-blue-300"
        required
      />

      <textarea
        name="message"
        id="message"
        placeholder="Mensaje"
        rows="5"
        class="w-full rounded-lg border border-[var(--white-icon-tr)] p-2 text-[var(--white-icon)] bg-transparent focus:outline-none focus:ring-2 focus:ring-blue-300"
        required
        minlength="6"
        maxlength="150"
      >
      </textarea>

      <button
        type="submit"
        class="bg-blue-300 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-400 transition-colors cursor-pointer"
      >
        Enviar
      </button>
    </form>
  </div>
</div>
